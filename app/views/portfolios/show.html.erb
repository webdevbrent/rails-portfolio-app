<div class="container">
  <div class="row">
    <div class="col-sm">
      <%= image_tag @portfolio_item.main_image %>
    </div>
    <div class="col-sm">
      <h1>
        <%= @portfolio_item.title %>
      </h1>
      <em>
        <%= @portfolio_item.title %>
      </em>
      <p>
        <%= @portfolio_item.body %>
      </p>

      <h3>Technologies Used:</h3>
      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

    </div>
  </div>

  <% if logged_in?(:site_admin) %>
    <%= link_to 'Edit', edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %> |
    <%= link_to 'Back', portfolios_path %> |
    <%= link_to 'Delete', @portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
  <% end %>
</div>
